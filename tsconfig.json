{
    "compilerOptions": {
        // Project Options
        "declaration": true,
        "declarationMap": true,
        "module": "ES6",
        "outDir": "dist",
        "removeComments": true,
        "rootDir": "src",
        "sourceMap": true,
        "target": "ES6",
        "lib": [
            "ES6",
            "DOM",
            "ES2017"
        ],
        // Strict Checks
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strict": true,
        // Module Resolution
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "classic",
        // Linter Checks
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
    ]
}